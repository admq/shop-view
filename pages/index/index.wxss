}

/* 分类 */
.category {
  /* margin: 20rpx 0 10rpx 0; */
  padding: 20rpx 0;
  background-color: #FFFFFF;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}
.category .item-block {
  text-align: center;
}
.category .item-title {
  font-size: .75rem;
  color: #333444;
  font-weight: 400; 
  margin-top: 5rpx;
}
.category .item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc(100vw / 7.5);
  height: calc(100vw / 7.5);
  border: 3rpx solid #e44943;
  box-sizing: border-box;
  border-radius: calc(100vw / 7.5);
  color: #e44943;
}
.category .item .iconfont {
  font-size: 1.5rem;
}