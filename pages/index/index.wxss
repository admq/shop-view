/* 轮播图 */
.scroll-view {
  height: 200px;
}
.swiper-item{
  display: block;
  /* height: 300px; */

  position: relative;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 36rpx;
}
.swiper-item:before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

